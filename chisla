package com.company;
import java.util.ArrayList;
public class Main {
public static void main(String[] args) {
    ArrayList<Integer> primeNumbers = new ArrayList();
    String output = "Простые соседние числа в промежутке [500;2022]: ";
    boolean prime = true;
    boolean previousNumberPrime = false;
    for (int i = 501; i < 2022; i +=2){
        for (int j = 2; j <= i-1; ++j){
            if (i%j==0){
                prime = false;
                previousNumberPrime = false;
                break;
            }
            else {
                prime = true;
            }
        }
        if (prime) {
            if (previousNumberPrime){
                primeNumbers.add(i-2);
                primeNumbers.add(i);
            }
            previousNumberPrime = true;
        }
    }
    System.out.println(output);
    for (int i = 0; i < primeNumbers.size(); ++i){
        System.out.println(primeNumbers.get(i));
    }
}
}
